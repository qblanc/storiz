<div class="container">
  <h1 class="cabin cabin-margin text-center"><%= @project.title %></h1>
  <div class="d-flex justify-content-center tabs">
    <%= link_to project_bibles_path(@project), class:"link-box" do %>
      <div class="bible-project">
        <h2>Bible</h2>
        <h4>Characters, plots & locations</h4>
      </div>
    <% end %>
    <%= link_to project_pitch_path(@project), class:"link-box" do %>
      <div class="pitch">
        <h2>Pitch</h2>
        <h4>Describe your story in a few words</h4>
      </div>
    <% end %>
    <%= link_to project_path(@project), class:"link-box" do %>
    <div class="synopsis">
      <h2>Synopsis</h2>
      <h4>Develop your story in a few pages</h4>
    </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <div class="room">
      <h2 class="text-center">Writing Room</h2>
      <% if @project.scenes.any? %>
        <div class="d-flex justify-content-center">
          <%= link_to "Resume", scene_path(@project.scenes.order(:updated_at).last), class: 'mr-4 mt-2 room-button-1' %>
          <%= link_to "New scene", new_project_scene_path(@project), class: 'ml-4 mt-2 room-button-2' %>
        </div>
        <h4 class="text-center subroom">Number of scenes : 4</h4>
        <%= render 'scene_infos' %>
      <% else %>
        <div class="d-flex justify-content-center">
          <%= link_to "Create my first scene", new_project_scene_path(@project), class: 'mt-3 room-button-3 text-center' %>
          </div>
            <h4 class="text-center subroom">No scenes yet !</h4>
      <% end %>
    </div>
  </div>
  <%= link_to mood_path(@project.mood), class:"mood-hover" do %>
    <div class="moodboard">
    </div>
  <% end %>
</div>
