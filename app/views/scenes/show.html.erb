<div class="d-flex">
  <div class="scene-number">
    <%= render 'scenes/scene_number', scene: @scene %>
  </div>
  <%= link_to "Edit title", edit_scene_path(@scene), class: "btn btn-sm btn-info edit-btn" %>
  <%= link_to "Delete scene", scene_path(@scene), method: :delete, class: "btn btn-sm btn-danger delete-btn", :data => {:confirm => 'Are you sure?'} %>
</div>
<h2 class="mb-5 scene-title"><%= @scene.title %></h2>
<div class="d-flex">
  <div class="indexx">
    <div class="index mr-3">
    <h4 class="text-center mt-1">Scenes list</h4>
        <ul class="overflow-scroll index-list">
          <%= render 'scenes/scenes_list', scenes: @scenes %>
        </ul>
    </div>
    <%= link_to "Back to project", project_path(@scene.project), class: "btn btn-warning index-btn mt-3 ml-4" %>
    <div class="d-none">
      <%= simple_form_for :truc, url: update_rank_scene_path, method: :post, remote: true do |f| %>
          <%= f.input :oldIndex %>
          <%= f.input :newIndex %>
          <%= f.button :submit, class: "update-rank-btn" %>
      <% end %>
    </div>
  </div>

  <div class="editor" data-scene-id="<%= @scene.id %>">
    <%= simple_form_for @scene, remote:true do |f| %>
        <%= f.rich_text_area :content %>
        <%= f.button :submit, class: 'btn btn-info update-btn' %>
    <% end %>
  </div>

  <div class="scene-bible">
    <div class="bible-events-title">
      <h4>Jacques Chirac</h4>
    </div>
    <div class="bible-events">
      <p>Jacques naît</p>
      <p>Jacques grandit</p>
      <p>Jacques prend confiance</p>
      <p>Jacques travaille</p>
      <p>Jacques est élu</p>
      <p>Jacques travaille encore</p>
      <p>Jacques accède aux plus hautes fonctions de l'état</p>
      <p>Jacques fatigue</p>
      <p>Jacques vieillit</p>
      <p>Jacques décède</p>
      <p>Jacques est inhumé</p>
      <p>Jacques est vivant à jamais dans nos coeurs</p>
    </div>
  </div>
</div>
