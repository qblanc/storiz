<div class="navbar navbar-expand-sm navbar-light <%= current_page?(root_path) ? "navbar-transparent" : "navbar-lewagon" %>">

  <div class="navbar-left-items">
    <div class="btn-group">
      <%= link_to project_path(@project) do %>
        <button type="button" class="btn navbar-btn">
          <i class="fas fa-chevron-left"></i>
        </button>
      <% end %>

      <div class="btn-group dropdown" role="group">
        <button type="button" class="btn navbar-btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Moodboard
        </button>
        <div class="dropdown-menu"> <!-- Dropdown menu links -->
          <% if @project.scenes.any? %>
            <%= link_to scene_path(@project.scenes.order(:updated_at).last), class: "dropdown-item" do %>
              Writing room
            <% end %>
          <% end %>
          <%= link_to project_bibles_path(@project), class: "dropdown-item" do %>
            Bible
          <% end %>
          <%= link_to project_pitch_path(@project), class: "dropdown-item" do %>
            Pitch
          <% end %>
          <%= link_to project_path(@project), class: "dropdown-item" do %>
            Synopsis
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="navbar-logo-centered">
    <%= link_to root_path, class: "navbar-brand-center" do %>
      <% if current_page? new_project_path %>
        <%= image_tag "pas_de_logo.png"%>
      <% else %>
        <%= image_tag "logo_beta_center.png"%>
      <% end %>
    <% end %>
  </div>


  <div class="navbar-right-items">

    <p class="btn navbar-btn mt-4"><i class="fas fa-bullhorn"></i> Call the Club !</p>

    <div>
      <% if user_signed_in? %>
          <%= cl_image_tag("800px-Fountain_pen_writing__28literacy_29_ydsiqh", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
            <%= link_to "New project", new_project_path, class: "dropdown-item nav-info" %>
            <%# <%= link_to "Profile", "#", class: "dropdown-item" %>
            <%= link_to "My projects", projects_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item nav-imp" %>
          </div>
      <% else %>
          <%# <%= link_to "Login", new_user_session_path, class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>
