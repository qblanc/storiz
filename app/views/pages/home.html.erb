<div class="home-banner">
  <div class="container">
    <div class="banner-content">
      <h1 class="mb-0 title-logo">STORIZ</h1>
      <p class="mb-5 subtitle">Masterpieces made easy</p>
      <% if user_signed_in? %>
        <div class="d-flex mb-4 justify-content-center">
          <%= link_to "Create a project", new_project_path, class: 'mr-4 home-button-1' %>
          <%= link_to "Browse my projects", projects_path, class: 'ml-4 home-button-2' %>
        </div>
      <% else %>
        <div class="d-flex mb-4 justify-content-center">
          <%= link_to "Create an account", new_user_registration_path, class: 'home-button-1' %>
          <%= link_to "Log in", new_user_session_path, class: 'ml-4 home-button-2' %>
        </div>
      <% end %>
      <%# <p class="club">Collaborate with other <span class="backcolor">creative</span> people</p> %>
    </div>
  </div>

  <a class="club-call club-btn" href="#storiz-club">
    <h4 class="club-text">Too afraid to write your project ?</h4>
    <div class="d-flex">
      <%= image_tag "arrow-v5.png", class: 'arrow-banner'%>
      <div class="club-text2">
        <h4>Join the Storiz Club</h4>
      </div>
    </div>
  </a>


  </div>
</div>

<div id="storiz-club">
  <div class="banner-club">
    <h1 class="title-club">STORIZ CLUB</h1>
    <p class="help">Help others on their projects</p>
    <h5 class="pop-projects">Popular projects</h5>
      <div class="not-carrousel">
        <div class="pagination d-flex">
          <div class="d-flex">
            <p id="previous"><</p>
            <p id="next">></p>
          </div>
        </div>
        <div class="wrapper-cards">
          <div class="home-projects">
            <%= render 'shared/home_cards' %>
          </div>
        </div>
      </div>
    <%# <h5 class="pop-categories">Trending categories</h5>
    <div class="home-categories">
      <%= render 'shared/home_categories' %>
    <%# </div> %>
    <div class="cta d-flex justify-content-center">
      <%= link_to "Visit the club", root_path, class: 'club-cta' %>
    </div>
  </div>
</div>
