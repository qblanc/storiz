<div class="home-banner">
  <div class="container">
    <div class="banner-content">
      <h1 class="mb-0 title-logo">STORIZ</h1>
      <p class="mb-5 subtitle">Masterpieces made easy</p>
      <% if user_signed_in? %>
        <div class="d-flex mb-4 justify-content-center">
          <%= link_to "Create a project", new_project_path, class: 'mr-4 home-button home-button-1' %>
          <%= link_to "Browse my projects", projects_path, class: 'ml-4 home-button home-button-2' %>
        </div>
      <% else %>
        <div class="d-flex mb-4 justify-content-center">
          <%= link_to "Create an account", new_user_registration_path, class: 'home-button home-button-1' %>
          <%= link_to "Log in", new_user_session_path, class: 'ml-4 home-button home-button-2' %>
        </div>
      <% end %>
      <%# <p class="club">Collaborate with other <span class="backcolor">creative</span> people</p> %>
    </div>
  </div>

  <a class="club-call club-btn" href="#storiz-club">
    <h4 class="club-text">Help others on their projects</h4>
    <div class="d-flex">
      <%= image_tag "arrow-v5.png", class: 'arrow-banner'%>
      <div class="club-text2">
        <h4>Join the Storiz Club</h4>
      </div>
    </div>
  </a>


  </div>
</div>

<div id="storiz-club">
  <div class="banner-club">
    <h1 class="title-club">STORIZ CLUB</h1>
    <p class="help">Everyone is an artist</p>
    <div class="walkthrough d-flex flex-wrap justify-content-center mt-5 mb-4">
      <%= render "shared/walkthrough"%>
    </div>

    <%# <h5 class="pop-categories">Trending categories</h5>
    <div class="home-categories">
      <%= render 'shared/home_categories' %>
    <%# </div> %>
    <div class="d-flex justify-content-center">
      <p class='club-cta home-button-2'>The club will open soon</p>
      <%# <%= link_to "The club will open soon", root_path, class: 'club-cta home-button-2 disabled' %>
    </div>
  </div>
</div>
