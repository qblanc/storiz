$('#editCharModal<%= @character.id %>').modal('hide');

function insertEditedCharacter(editedHTML) {
    const element = document.querySelector('#char-<%= @character.id %>')
    element.outerHTML = editedHTML;
    const nameList = document.querySelector("[data-char='char-<%= @character.id %>']");
    nameList.innerHTML = "<%= @character.first_name %> <%= @character.last_name %>";
}

insertEditedCharacter('<%= j render "characters/character_show_partial_pour_la_bible", character: @character %>');
