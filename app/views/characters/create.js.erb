function addNewCharacter(characterHTML) {
  const characters = document.querySelector('.list-characters');
  characters.insertAdjacentHTML('beforeend', characterHTML);
  if (document.querySelector('#char-empty-notice')) {
    document.querySelector('.#char-empty-notice').remove();
  };
};

